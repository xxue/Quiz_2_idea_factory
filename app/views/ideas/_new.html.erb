<div class="row">
  <div class="col-xs-12">
    <h2 style = "font-size:30px; font-family: San Francisco, sans-serif; text-align:center; color:grey"></h2>
      <div class="form-group">
        <%= form_for @idea do |f| %>
        <div>
          <%= f.label :title, style:'font-size:23px; font-family: San Francisco, sans-serif'%><br>
          <%= f.text_field :title, style: 'width:100%; height: 30px; border: 2px solid grey' %>
        </div>
        <div>
          <%= f.label :description, style:'font-size:22px; font-family: San Francisco, sans-serif' %><br>
          <%= f.text_area :description, style: 'width:100%; height: 350px; border: 2px solid grey' %>
        </div>
        <div class="modal-footer">
            <%= f.submit "Save", class: "btn btn-primary", style:"margin-top:20px"%>

        </div>


      <% end %>
    </div>
  </div>
</div>
