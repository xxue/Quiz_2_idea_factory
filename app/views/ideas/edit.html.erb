<div class="container-fluid">
  <div class="row">
    <div class="edit-idea col-xs-12 col-xs-offset-3">

<h2>Edit Your Idea</h2>

<%= form_for @idea, url: idea_path(@idea)  do |f| %>
  <div>
    <h4><%= f.label :title %><br></h4>
    <p><%= f.text_field :title, style: 'width:50%; height: 30px; border: 2px solid grey' %></p>
  </div>
  <div>
    <h4><%= f.label :description %><br></h4>
    <%= f.text_area :description, style: 'width:50%; height: 500px; border: 2px solid grey'  %>
  </div>
  <%= f.submit 'Update'%>
<% end %>

</div>
</div>
</div>
